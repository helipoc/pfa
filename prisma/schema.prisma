// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Colis {
  id          Int    @id @default(autoincrement())
  desc        String
  poid        Float
  addressDelv String
  NameDelv    String
  clientId    Int
  owner       Client @relation(fields: [clientId], references: [id])
}

model Client {
  id       Int     @id @default(autoincrement())
  tel      String
  email    String  @unique
  password String
  address  String
  colis    Colis[]
}
